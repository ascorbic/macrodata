{
  "name": "opencode-macrodata",
  "version": "0.1.0",
  "description": "Persistent local memory for OpenCode agents - journal, search, reminders, and context injection",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "check": "oxlint --type-aware --type-check"
  },
  "keywords": [
    "opencode",
    "plugin",
    "memory",
    "ai",
    "coding-agent",
    "local",
    "journal",
    "semantic-search"
  ],
  "author": "Matt Kane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ascorbic/macrodata",
    "directory": "plugins/macrodata/opencode"
  },
  "homepage": "https://github.com/ascorbic/macrodata#readme",
  "bugs": {
    "url": "https://github.com/ascorbic/macrodata/issues"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162",
    "@xenova/transformers": "^2.17.2",
    "vectra": "^0.9.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.0.0",
    "oxlint-tsgolint": "latest"
  },
  "opencode": {
    "type": "plugin",
    "hooks": [
      "chat.message",
      "experimental.session.compacting",
      "tool.execute.before"
    ]
  },
  "files": [
    "*.ts",
    "skills",
    "../src"
  ]
}
